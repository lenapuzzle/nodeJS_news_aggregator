<h1>Add an Article</h1>

<form action="/articles" method="post">
    <p>{{error}}</p>
    <div class="input">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" />
    </div>
    <div class="input">
        <label for="url">URL:</label>
        <input type="text" id="url" name="url" />
    </div>
    <input type="submit" value="Submit" />

</form>